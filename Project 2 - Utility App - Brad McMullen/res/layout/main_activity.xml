<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2" >

    <TextView
        android:id="@+id/timeText"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_x="15dp"
        android:layout_y="14dp"
        android:text="0:00:00.0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#888888"
        android:textSize="70dp" />

    <Button
        android:id="@+id/startbtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="125dp"
        android:text="Start" />

    <Button
        android:id="@+id/stopbtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="125dp"
        android:text="Stop" />

    <Button
        android:id="@+id/lapbtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:layout_y="125dp"
        android:text="Lap" />

    <Button
        android:id="@+id/resetbtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_x="250dp"
        android:layout_y="125dp"
        android:text="Reset" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="200dp"
        android:text="Current Lap"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/currentlaptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="200dp"
        android:text="0:00:00.0"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="245dp"
        android:text="Previous Lap"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/previouslaptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="245dp"
        android:text="0:00:00.0"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="290dp"
        android:text="Fastest Lap"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/fastlaptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="290dp"
        android:text="0:00:00.0"
        android:textSize="16dp" />

    <TableRow
        android:id="@+id/inflater1"
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:layout_x="0dp"
        android:layout_y="319dp" >

        <ScrollView
            android:id="@+id/lapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TableLayout
                android:id="@+id/lapLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </TableLayout>
        </ScrollView>
    </TableRow>

    <Button
        android:id="@+id/optionbtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_x="118dp"
        android:layout_y="425dp"
        android:text="Options" />

</AbsoluteLayout>